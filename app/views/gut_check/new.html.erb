<fieldset>
  <form action="/" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <label for="rating">Rating:</label>
    <input type="float" id="rating" name="rating" placeholder="0.00"></input>
    <br>
    <label for="comment">Comment:</label>
    <input type="text" id="comment" name="comment" placeholder="enter text here"></input>
    <br>
    <input type="submit" value="Submit New GutCheck">
  </form>
</fieldset>
